{{#each postArr as |post|}}
<div data-post="{{post.id}}">
  <div class="column1">
    <figure class="card code-card">
      <div>
        <h2>{{post.title}}</h2>
        <p>{{post.content}}</p>
        <h5>by {{user.username}}</h5>
      </div>
      <div>
        <a style="color: rgb(215, 179, 221) !important;" href="/newcomment">Add Comment</a>
        <a style="color: rgb(215, 179, 221) !important;" href="/comments">View All Comments</a>
      </div>
    </figure>
  </div>

</div>
{{/each}}