<form data-post="{{post.id}}" class="form-edit">
  <div class="edit-post">
    <div class="column1">
      <figure class="card code-card">
        <label for="title">Title</label>
        <input type="text" id="postTitle" placeholder="{{post.title}}" />
        <label style="margin-top: 3%;" for="content">Content</label>
        <textarea id="content">{{post.content}}</textarea>
        <input style="margin-left: 0; margin-top: 5%; margin-bottom: 5%;" type="submit" value="Edit" class="submit"
          id="edit-post" align="center" />
      </figure>
    </div>
  </div>
</form>