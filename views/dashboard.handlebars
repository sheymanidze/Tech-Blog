<div class="userPosts">
  <h1>Your Current Posts</h1>
</div>
<div class="column1">
  <div class="dasboard">
    {{#if post.length}}
    {{#each post as |post|}}
    {{>postdetails post}}
    <a href="/post/edit/{{post.id}}"></a>
    <input style="margin-left: 46%;" type="submit" value="Edit" class="submit" align="center" />
    {{/each}}
    {{else}}
    <h2>You don't have any posts, please create a new one</h2>
    <a href="/newpost">Create</a>
    {{/if}}
  </div>
</div>