<div class="post" data-post="{{post.id}}">
  <figure class="card code-card">
    <div>
      <h3 style="color: #5a86e4; text-align:center;">{{title}}</h3>
    </div>
    <br>
    <div>
      <p style="text-align:center;">{{content}}</p>
    </div>
    <div>
      <span>By: {{user.username}}</span>
    </div>
    <br>
    <div style="margin-bottom: 3%;">
      <h7>{{format_date createdAt}}</h7>
    </div>
    <div>
      <div>

        {{>commentDetails comments}}

      </div>
      <br>
      <div class="comments-add" id="commentsAdd{{post.id}}">
        <h4>Please leave a comment</h4>
        <br>
        <div class="input-field">
          <textarea style="height: 50px !important; font-size: 10px !important;" class="comment" id="comments"
            type="text" id="post-comment"></textarea>
        </div>
        <div>
          <input click="addComments()" style="margin-left: 40%; margin-bottom: 3%;" id="comment" type="submit"
            value="Submit" class="submit"></input>
        </div>
      </div>





  </figure>
</div>